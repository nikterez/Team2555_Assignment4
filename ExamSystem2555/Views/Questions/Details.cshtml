@model WebApp.DTO_Models.QuestionDetailsView

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/QuestionDetails.css" asp-append-version="true"/>    
</head>

<div class="center"><h2>Question Details</h2></div>

        <div class="container" id="fixed-size">@Html.Raw(Model.QuestionDisplay)</div>
<table class="table table-hover table-light" style = "text-align: center;">
   
    
    <tr>
        <th>Difficulty</th>
        <td>@Model.QuestionDifficulty</td>
    </tr>
    <tr>
        <th>Topics</th>
        <td>
            @if (Model.Topics.Count == 0)
            {
                <p>NoTopics</p>
            }
            else
            {
                @foreach (var topic in Model.Topics)
                {
                    @topic.Title <br>
                }
            }
        </td>
    </tr>
    <tr>
        <th>Certificates</th>
        <td>
            @foreach (var cert in Model.Certificates)
            {
                @cert.Title <br>
            }
        </td>
    </tr>
    <tr>
        <th><br><br>Answers</th>
        <td>
            @foreach (var answer in Model.Answers)
            {
                @Html.Raw(answer.PossibleAnswer)
                @if (answer.IsCorrect)
                {
                            <h6>(Correct Answer)</h6>
                }
                    
            }
        </td>
    </tr>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script>


        document.addEventListener("DOMContentLoaded", function () {
            var td = document.getElementById(`fixed-size`);
            var img = td.querySelector("img");
            td.style.width = "150%";
            td.style.height = "200px";
            td.style.overflow = "hidden";
            td.style.display = "flex";
            td.style.justifyContent = "center";
            if (img) {
                img.style.width = "300%";
                img.style.height = "100%";
                img.style.objectFit = "cover";
            }
          
        });

</script>